{
    "search.useIgnoreFiles": false,
    "search.exclude": {
        "**/.git": true,
        "build/**": true,
        "expected/**": true,
        "ctx.c": true,
        ".venv": true,
        "tools/rstools/target": true,
    },
    "files.associations": {
        "*.C": "c",
        "*.h": "c",
        "*.s": "n64asm",
        "*.txt": "plaintext"
    },
    "python.analysis.extraPaths": [
        "./tools/splat",
    ],
    "rust-analyzer.linkedProjects": [
        "${workspaceFolder}/tools/rstools/Cargo.toml"
    ],
    "C_Cpp.files.exclude": {
        "puzzle_collection/": true,
        "**/.vscode": true,
        "**/.vs": true
    }
}